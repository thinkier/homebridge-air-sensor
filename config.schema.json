{
  "pluginAlias": "AirQualitySensor",
  "pluginType": "accessory",
  "schema": {
    "name": {
      "title": "Name",
      "type": "string",
      "placeholder": "Name",
      "default": "Air Quality Sensor"
    },
    "api_endpoint": {
      "title": "API Endpoint",
      "type": "string",
      "placeholder": "http://example.com:5555/report.json",
      "required": true
    },
    "features": {
      "title": "Features to enable",
      "type": "object",
      "properties": {
        "temperature": {
          "title": "Temperature (C)",
          "type": "boolean",
          "default": "true"
        },
        "humidity": {
          "title": "Humidity (%RH)",
          "type": "boolean",
          "default": "true"
        },
        "aqi": {
          "title": "Air Quality (1-5)",
          "type": "boolean",
          "default": "false"
        },
        "voc": {
          "title": "Volatile Organic Compounds Measurement (ppm)",
          "type": "boolean",
          "default": "false",
          "condition": {
            "functionBody": "return model.features.aqi === true;"
          }
        },
        "co": {
          "title": "Carbon Monoxide Measurement (ppm)",
          "type": "boolean",
          "default": "false"
        },
        "co2": {
          "title": "Carbon Dioxide (or equivalents) Measurement (ppm)",
          "type": "boolean",
          "default": "false"
        }
      }
    }
  }
}
